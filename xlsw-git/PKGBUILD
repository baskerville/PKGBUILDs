# Maintainer: Bastien Dejean <baskerville@lavabit.com>

pkgname=xlsw-git
pkgver=20130130
pkgrel=1
pkgdesc='List the X window tree contents'
arch=('i686' 'x86_64')
url='https://github.com/baskerville/xlsw'
license=('custom:Unlicense')
depends=('libxcb' 'xcb-util-wm')
makedepends=('git')
provides=('xlsw')
conflicts=('xlsw')
_gitroot='git://github.com/baskerville/xlsw.git'
_gitname='xlsw'

build() {
    cd "$srcdir"
    if [ -d "$_gitname" ] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi

    cd "$srcdir/$_gitname"
    make clean
    make PREFIX="/usr"
}

package() {
    cd "$srcdir/$_gitname"
    make PREFIX="/usr" DESTDIR="$pkgdir" install
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
