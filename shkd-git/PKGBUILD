# Maintainer: Bastien Dejean <baskerville at lavabit.com>

pkgname=shkd-git
pkgver=20121111
pkgrel=1
pkgdesc='A simple hotkey daemon'
arch=('i686' 'x86_64')
url="https://github.com/baskerville/shkd"
license=('BSD')
makedepends=('git' 'linux-api-headers')
provides=('shkd')
conflicts=('shkd')
backup=('etc/shkdrc')
_gitroot='git://github.com/baskerville/shkd.git'
_gitname='shkd'

build() {
    cd "$srcdir"
    if [ -d "$_gitname" ] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi

    cd "$srcdir/$_gitname"
    make clean
    make PREFIX="/usr"
}

package() {
    cd "$srcdir/$_gitname"
    make PREFIX="/usr" DESTDIR="$pkgdir" install
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
