# Maintainer: Bastien Dejean <baskerville@lavabit.com>

pkgname=textwidth-git
pkgver=20130331
pkgrel=1
pkgdesc='Return the pixel width of the given strings for the given font'
arch=('i686' 'x86_64')
url='https://github.com/baskerville/textwidth'
license=('custom:Unlicense')
depends=('cairo')
makedepends=('git')
provides=('textwidth')
conflicts=('textwidth')
_gitroot='git://github.com/baskerville/textwidth.git'
_gitname='textwidth'

build() {
    cd "$srcdir"
    if [ -d "$_gitname" ] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi
    cd "$srcdir/$_gitname"
    make PREFIX="/usr"
}

package() {
    cd "$srcdir/$_gitname"
    make PREFIX="/usr" DESTDIR="$pkgdir" install
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
