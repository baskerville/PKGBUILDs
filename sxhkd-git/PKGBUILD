# Maintainer: Bastien Dejean <baskerville@lavabit.com>

pkgname=sxhkd-git
pkgver=20130319
pkgrel=1
pkgdesc='A simple X hotkey daemon'
arch=('i686' 'x86_64')
url='https://github.com/baskerville/sxhkd'
license=('custom:BSD')
depends=('libxcb' 'xcb-util-keysyms')
makedepends=('git' 'xcb-util')
provides=('sxhkd')
conflicts=('sxhkd')
_gitroot='git://github.com/baskerville/sxhkd.git'
_gitname='sxhkd'

build() {
    cd "$srcdir"
    if [ -d "$_gitname" ] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi

    cd "$srcdir/$_gitname"
    make PREFIX="/usr"
}

package() {
    cd "$srcdir/$_gitname"
    make PREFIX="/usr" DESTDIR="$pkgdir" install
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
