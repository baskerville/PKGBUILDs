# Maintainer: Bastien Dejean <baskerville at lavabit.com>

pkgname=stoic-git
pkgver=20121119
pkgrel=1
pkgdesc='A tiny static site generator'
arch=('i686' 'x86_64')
url='https://github.com/baskerville/stoic'
license=('Unlicense')
depends=('python' 'python-jinja' 'python-yaml' 'python-misaka' 'python-beautifulsoup4')
makedepends=('git')
provides=('stoic')
conflicts=('stoic')
_gitroot='git://github.com/baskerville/stoic.git'
_gitname='stoic'

build() {
    cd "$srcdir"
    if [ -d "$_gitname" ] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi
}

package() {
    cd "$srcdir/$_gitname"
    install -D -m755 stoic "$pkgdir/usr/bin/stoic"
    install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
