# Maintainer: Bastien Dejean <baskerville at lavabit.com>

pkgname=sres-git
pkgver=20120726
pkgrel=1
pkgdesc="Print the current screen resolution on stdout"
arch=('any')
url="https://github.com/baskerville/sres"
license=('BSD')
depends=('gcc' 'libx11')
makedepends=('git')
provides=('sres')
conflicts=('sres')
_gitroot='git://github.com/baskerville/sres.git'
_gitname='sres'

build() {
    cd "$srcdir"
    if [ -d "$_gitname" ] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi

    cd "$srcdir/$_gitname"
    make
}

package() {
    cd "$srcdir/$_gitname"
    install -D -m755 sres "$pkgdir/usr/bin/sres"
}
