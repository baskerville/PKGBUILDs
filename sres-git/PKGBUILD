# Maintainer: Bastien Dejean <baskerville@lavabit.com>

pkgname=sres-git
pkgver=20130319
pkgrel=1
pkgdesc='Print the current screen resolution'
arch=('i686' 'x86_64')
url='https://github.com/baskerville/sres'
license=('custom:Unlicense')
depends=('libxcb')
makedepends=('git')
provides=('sres')
conflicts=('sres')
_gitroot='git://github.com/baskerville/sres.git'
_gitname='sres'

build() {
    cd "$srcdir"
    if [ -d "$_gitname" ] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi

    cd "$srcdir/$_gitname"
    make PREFIX="/usr"
}

package() {
    cd "$srcdir/$_gitname"
    make PREFIX="/usr" DESTDIR="$pkgdir" install
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
