# Maintainer: Bastien Dejean <baskerville@lavabit.com>

pkgname=xtitle-git
pkgver=20130319
pkgrel=1
pkgdesc='Outputs X window titles'
arch=('i686' 'x86_64')
url='https://github.com/baskerville/xtitle'
license=('custom:Unlicense')
depends=('libxcb' 'xcb-util-wm')
makedepends=('git')
provides=('xtitle')
conflicts=('xtitle')
_gitroot='git://github.com/baskerville/xtitle.git'
_gitname='xtitle'

build() {
    cd "$srcdir"
    if [ -d "$_gitname" ] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi
    cd "$srcdir/$_gitname"
    make PREFIX="/usr"
}

package() {
    cd "$srcdir/$_gitname"
    make PREFIX="/usr" DESTDIR="$pkgdir" install
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
