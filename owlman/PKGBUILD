# Maintainer: Bastien Dejean <nihilhill@gmail.com>

pkgname=owlman
pkgver=0.5
pkgrel=1
pkgdesc='A pacman and cower wrapper focused on simplicity'
arch=('i686' 'x86_64' 'armv7h')
url="https://github.com/baskerville/${pkgname}"
license=('custom:BSD')
depends=('sudo' 'dash' 'cower' 'abs')
provides=("$pkgname")
conflicts=("$pkgname")
source=("https://github.com/baskerville/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('c437025daac30153026e95ce3bba2a95')

package() {
    cd "${pkgname}-${pkgver}"
    mkdir -p "$pkgdir"/{usr/bin,etc/bash_completion.d,usr/share/man/man8}
    cp owlman owlman_* "$pkgdir/usr/bin"
    cp bash_completion.d/* "$pkgdir/etc/bash_completion.d"
    cp owlman.8 "$pkgdir/usr/share/man/man8"
}
